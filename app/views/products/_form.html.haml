= simple_form_for @product do |f|
    = f.error_notification
    .form_inputs
        = f.input :title, input_html: {:size => "35x1"}
        = f.input :price, input_html: {:size => "35x1"}
        = f.input :description, input_html: {:size => "40x4"}
        = f.input :image_url, input_html: {:size => "35x1"}
    .form_actions
        = f.button :submit, label: "create Book"

